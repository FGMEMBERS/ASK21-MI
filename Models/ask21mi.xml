<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>ask21mi.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/ASK21-MI/Models/Liveries", 10);

      var self = cmdarg();

      var float_0 = self.getNode("sim/multiplay/generic/float[0]", 1);
      var float_1 = self.getNode("sim/multiplay/generic/float[1]", 1);
      
      var crew_door = self.getNode("instrumentation/doors/crew/position-norm", 1);
      var passenger_door = self.getNode("instrumentation/doors/passenger/position-norm", 1);
    
      crew_door.alias(float_0);
      passenger_door.alias(float_1);
    </load>

    <unload>
      livery_update.stop();
      crew_door.unalias();
      passenger_door.unalias();
    </unload>
  </nasal>

  <animation>
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>porteG</object-name>
    <object-name>porteD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>spoilerG</object-name>
    <object-name>spoilerD</object-name>
    <object-name>derive</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>moteur</object-name>
    <object-name>helice</object-name>
    <object-name>helicefixe</object-name>
    <object-name>tourvitreA</object-name>
    <object-name>tourvitreB</object-name>

    <object-name>introues</object-name>
    <object-name>roueA</object-name>
    <object-name>roueC</object-name>
    <object-name>roueB</object-name>

    <!-- Transparence -->
    <object-name>vitreA</object-name>
    <object-name>vitreB</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>porteG</object-name>
    <object-name>porteD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>spoilerG</object-name>
    <object-name>spoilerD</object-name>
    <object-name>derive</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>moteur</object-name>
    <object-name>helice</object-name>
    <object-name>helicefixe</object-name>
    <object-name>tourvitreA</object-name>
    <object-name>tourvitreB</object-name>

    <object-name>introues</object-name>
    <object-name>roueA</object-name>
    <object-name>roueC</object-name>
    <object-name>roueB</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <effect>
    <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>porteG</object-name>
    <object-name>porteD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>spoilerG</object-name>
    <object-name>spoilerD</object-name>
    <object-name>derive</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>moteur</object-name>
    <object-name>helice</object-name>
    <object-name>helicefixe</object-name>
    <object-name>tourvitreA</object-name>
    <object-name>tourvitreB</object-name>
  </effect>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitreA</object-name>
    <object-name>vitreB</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitreA</object-name>
    <object-name>vitreB</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/ASK21-MI/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Immatriculation -->
  <model>
    <path>Aircraft/ASK21-MI/Models/Immat/immat.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Les ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>      
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 24 </factor>
    <axis>
      <x1-m> -1.166 </x1-m>
      <y1-m> -7.961 </y1-m>
      <z1-m>  0.132 </z1-m>
      <x2-m> -0.844 </x2-m>
      <y2-m> -5.176 </y2-m>
      <z2-m> -0.061 </z2-m>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>      
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> 24 </factor>
    <axis>
      <x1-m> -0.844 </x1-m>
      <y1-m>  5.176 </y1-m>
      <z1-m> -0.061 </z1-m>
      <x2-m> -1.166 </x2-m>
      <y2-m>  7.961 </y2-m>
      <z2-m>  0.132 </z2-m>
    </axis>
  </animation>
 
  <!-- Aérofreins -->
  <animation>
    <type>rotate</type>
    <object-name>spoilerG</object-name>
    <property>surface-positions/speedbrake-pos-norm</property>
    <factor> 50 </factor>
    <axis>
      <x1-m> -1.142 </x1-m>
      <y1-m> -2.734 </y1-m>
      <z1-m> -0.077 </z1-m>
      <x2-m> -1.202 </x2-m>
      <y2-m> -4.161 </y2-m>
      <z2-m> -0.004 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>spoilerD</object-name>
    <property>surface-positions/speedbrake-pos-norm</property>
    <factor> 50 </factor>
    <axis>
      <x1-m> -1.202 </x1-m>
      <y1-m>  4.161 </y1-m>
      <z1-m> -0.004 </z1-m>
      <x2-m> -1.142 </x2-m>
      <y2-m>  2.734 </y2-m>
      <z2-m> -0.077 </z2-m>
    </axis>
  </animation>

  <!-- Profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>      
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 24 </factor>  
    <center>
      <x-m> 3.816 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.812 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <!-- Direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>      
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 24 </factor>
    <axis>
      <x1-m> 3.807 </x1-m>
      <y1-m> 0.000 </y1-m>
      <z1-m> 0.295 </z1-m>
      <x2-m> 3.892 </x2-m>
      <y2-m> 0.000 </y2-m>
      <z2-m> 0.788 </z2-m>
    </axis>
  </animation>
 
  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -3.235 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.845 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueC</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.975 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.876 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueB</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  3.585 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.519 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <name>TotaleVitreA</name>
    <object-name>vitreA</object-name>
    <object-name>tourvitreA</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TotaleVitreA</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -50 </factor>
    <center>
      <x-m> -3.477 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.258 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>TotaleVitreB</name>
    <object-name>vitreB</object-name>
    <object-name>tourvitreB</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TotaleVitreB</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 50 </factor>
    <center>
      <x-m> -1.318 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.043 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Portes du moteur -->
  <animation>
    <type>rotate</type>
    <object-name>porteG</object-name>      
    <property>instrumentation/doors/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 95 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 95 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.402 </x1-m>
      <y1-m> -0.187 </y1-m>
      <z1-m> -0.121 </z1-m>
      <x2-m>  1.316 </x2-m>
      <y2-m> -0.154 </y2-m>
      <z2-m> -0.239 </z2-m>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>porteD</object-name>      
    <property>instrumentation/doors/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 95 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 95 </dep></entry>
    </interpolation>
    <axis>
      <x1-m>  1.316 </x1-m>
      <y1-m>  0.154 </y1-m>
      <z1-m> -0.239 </z1-m>
      <x2-m> -0.402 </x2-m>
      <y2-m>  0.187 </y2-m>
      <z2-m> -0.121 </z2-m>
    </axis>
  </animation>
 
  <!-- Le moteur -->
  <animation>
    <name>EnsembleMoteur</name>
    <object-name>moteur</object-name>      
    <object-name>helice</object-name>      
    <object-name>helicefixe</object-name>      
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>EnsembleMoteur</object-name>      
    <property>instrumentation/doors/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 95 </dep></entry>
      <entry><ind> 1 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.307 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.266 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
  <!-- Animation de l'hélice -->
  <animation>
    <name>HeliceComplete</name>
    <object-name>helice</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <axis>
      <x1-m> -0.331 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m>  0.714 </z1-m>
      <x2-m> -0.423 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  0.717 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helicefixe</object-name>      
    <condition>
      <less-than>
        <property>instrumentation/doors/passenger/position-norm</property>
        <value>1</value>
      </less-than>
    </condition>
  </animation>
 
  <animation>
    <name>HeliceAnime</name>
    <object-name>helice</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>HeliceAnime</object-name>      
    <condition>
      <equals>
        <property>instrumentation/doors/passenger/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
 
</PropertyList>

