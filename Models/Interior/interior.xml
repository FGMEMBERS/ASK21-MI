<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>interieur2</object-name>
    <object-name>tour</object-name>
    <object-name>tour2</object-name>

    <!-- Objets transparents -->
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </animation>

