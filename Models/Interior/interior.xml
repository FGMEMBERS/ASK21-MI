<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>interieur2</object-name>
    <object-name>inttour</object-name>
    <object-name>inttour2</object-name>
    <object-name>planchet</object-name>
    
    <object-name>yoke</object-name>
    <object-name>flaps</object-name>
    <object-name>knob</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/ASK21-MI/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </effect>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </effect>
  
  <!-- Yaw String -->
  <model>
    <name>yawstring</name>
    <path>Aircraft/ASK21-MI/Models/Interior/Panel/Instruments/yawstring/yawstring.xml</path>
    <offsets>
      <x-m> -3.170 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.172 </z-m>
      <pitch-deg> -15 </pitch-deg>
    </offsets>
  </model>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/ASK21-MI/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.85451 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.52084 </z-m>
      <pitch-deg> 4 </pitch-deg>
    </offsets>
  </model>

  <!-- Planche de bord avant -->
  <model>
    <name>Panel</name>
    <path>Aircraft/ASK21-MI/Models/Interior/Panel/panel1.xml</path>
    <offsets>
      <x-m> -3.437 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.375 </z-m>
      <pitch-deg>   -4 </pitch-deg>
    </offsets>
  </model>

  <!-- Planche de bord basse -->
  <model>
    <path>Aircraft/ASK21-MI/Models/Interior/Panel/panel3.xml</path>
    <offsets>
      <x-m> -3.437 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.375 </z-m>
      <pitch-deg>   -4 </pitch-deg>
    </offsets>
  </model>

  <!-- Planche de bord arrière -->
  <model>
    <path>Aircraft/ASK21-MI/Models/Interior/Panel/panel2.xml</path>
    <offsets>
      <x-m> -2.197 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.278 </z-m>
      <pitch-deg>   -10 </pitch-deg>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>CanopyA</name>
    <object-name>Panel</object-name>
    <object-name>intvitreA</object-name>
    <object-name>yawstring</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>CanopyA</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>CanopyA</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> -50 </factor>
    <center>
      <x-m> -3.477 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.258 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>intvitreB</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>intvitreB</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 50 </factor>
    <center>
      <x-m> -1.318 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.043 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
