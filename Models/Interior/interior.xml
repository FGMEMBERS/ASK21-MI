  <!-- Planche de bord avant -->
  <model>
    <name>Panel</name>
    <path>Aircraft/ASK21-MI/Models/Interior/Panel/panel1.xml</path>
    <offsets>
      <x-m> -3.437 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.375 </z-m>
      <roll-deg>     0.0 </roll-deg>
      <pitch-deg>   -4.0 </pitch-deg>
      <heading-deg>  0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Planche de bord basse -->
  <model>
    <path>Aircraft/ASK21-MI/Models/Interior/Panel/panel3.xml</path>
    <offsets>
      <x-m> -3.437 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.375 </z-m>
      <roll-deg>     0.0 </roll-deg>
      <pitch-deg>   -4.0 </pitch-deg>
      <heading-deg>  0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Planche de bord arrière -->
  <model>
    <path>Aircraft/ASK21-MI/Models/Interior/Panel/panel2.xml</path>
    <offsets>
      <x-m> -2.197 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.278 </z-m>
      <roll-deg>      0.0 </roll-deg>
      <pitch-deg>   -10.0 </pitch-deg>
      <heading-deg>   0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>CanopyA</name>
    <object-name>Panel</object-name>
    <object-name>intvitreA</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CanopyA</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> -50 </factor>
    <center>
      <x-m> -3.477 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.258 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intvitreB</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 50 </factor>
    <center>
      <x-m> -1.318 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.043 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

</PropertyList>
