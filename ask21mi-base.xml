<?xml version="1.0" encoding="ISO-8859-1"?>

<!--
************************************************************************
Ask 21 mi based on ask 21 by by Heiko Schulz
************************************************************************
-->
<PropertyList>
  
  <sim include="Systems/views.xml">
    
    <description>Schleicher ASK 21 mi (YASim)</description>
    <author>BARANGER Emmanuel</author>
    <aircraft-version>0.2</aircraft-version>
    <status>beta production</status>
    
    <startup>
      <splash-texture>Aircraft/ASK21-MI/ask21mi-splash.png</splash-texture>
    </startup>
    
    <model>
      <path archive="y">Aircraft/ASK21-MI/Models/ask21mi.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>
    
    <sound>
      <path>Aircraft/ASK21-MI/Sounds/ask21mi-sound.xml</path>
    </sound>
    
    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int   n="0"  type="int">  0 </int>                                         <!-- 0 immat -->
        <int   n="1"  type="int">  0 </int>                                         <!-- 1 immat -->
        <int   n="2"  type="int">  0 </int>                                         <!-- 2 immat -->
        <int   n="3"  type="int">  0 </int>                                         <!-- 3 immat -->
        <int   n="4"  type="int">  0 </int>                                         <!-- 4 immat -->
        <int   n="5"  type="int">  0 </int>                                         <!-- 5 immat -->
        <int   n="6"  type="bool"> 1 </int>                                         <!-- 6 -->
        <int   n="7"  type="int">  0 </int>                                         <!-- 7  -->
        <int   n="8"  alias="/systems/electrical/outputs/nav-lights">  0 </int>     <!-- 8 nav-lights -->
        <int   n="9"  alias="/sim/model/lights/beacon/state">  false </int>         <!-- 9 strobe-lights -->
        <float n="0"  alias="/sim/model/door-positions/crew/position-norm"/>
        <float n="1"  alias="/sim/model/door-positions/passenger/position-norm"/>
        <float n="2"  alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3"  alias="/position/altitude-ft"> 0 </float>                     <!-- altitude for Smoke/Trail -->
        <float n="4"  alias="/engines/engine[0]/rpm"/>
        <float n="5"  alias="/engines/engine[0]/cranking"/>
        <float n="6"  alias="/gear/gear[0]/wow/"/>
        <float n="7"  alias="/gear/gear[1]/wow/"/>
        <float n="8"  alias="/gear/gear[2]/wow/"/>
        <float n="9"  alias="/gear/gear[0]/rollspeed-ms"/>
        <float n="10" alias="/gear/gear[1]/rollspeed-ms"/>
        <float n="11" alias="/gear/gear[2]/rollspeed-ms"/>
        <float n="12" alias="/accelerations/pilot-g"/>
        <!-- For Bombable -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>
        <string n="9" type="string" />
      </generic>
    </multiplay>
    
    <systems>
      <electrical>
        <path></path>
      </electrical>
    </systems>
    
    <hitches>
      <!-- make sure some properties do exist, when the list for multiplayer transfere is defined
      they need to be in the same value, as they are initilized in the FDM, to get the same 
      values after reset should fix this somehow-->
      <aerotow>
        <tow>
          <length type="float">60</length>
          <elastic-constant type="float">10000</elastic-constant>
          <weight-per-m-kg-m type="float">1</weight-per-m-kg-m>
          <dist type="float">1</dist>
          <connected-to-property-node type="bool"></connected-to-property-node>
          <brake-force type="float">100000</brake-force>
          <connected-to-ai-or-mp-callsign type ="string">*</connected-to-ai-or-mp-callsign>
          <end-force-x type ="float">0</end-force-x>
          <end-force-y type ="float">0</end-force-y>
          <end-force-z type ="float">0</end-force-z>
        </tow>
        <speed-in-tow-direction type="float">0</speed-in-tow-direction>
        <open type="bool">true</open>
        <local-pos-x type="float">0</local-pos-x>
        <local-pos-y type="float">0</local-pos-y>
        <local-pos-z type="float">0</local-pos-z>
        <is-slave type="bool">false</is-slave>
      </aerotow>
    </hitches>
    
    <help include="Systems/help.xml"/>
    
    <menubar include="Dialogs/ask21mi-menu.xml"/>
    
  </sim>
  
  <input include="Systems/ask21mi-keyboard.xml"/>
  
  <controls>
    <winch>
      <place type="bool">false</place>
    </winch>
    <aerotow>
      <find-aircraft type="bool">false</find-aircraft>
    </aerotow>
  </controls>
  
  <nasal>
    <doors>
      <file>Aircraft/ASK21-MI/Nasal/doors.nas</file>
    </doors>
    <ask21mi>
      <file>Aircraft/ASK21-MI/Nasal/liveries.nas</file>
      <file>Aircraft/ASK21-MI/Nasal/light.nas</file>
      <file>Aircraft/ASK21-MI/Nasal/immat.nas</file>
      <file>Aircraft/ASK21-MI/Nasal/yawstring.nas</file>
      <file>Aircraft/ASK21-MI/Models/Interior/Panel/Instruments/vario/ilec-sc7.nas</file>
    </ask21mi>
    <glider>
      <file>Aircraft/ASK21-MI/Nasal/dragger.nas</file>
      <file>Aircraft/ASK21-MI/Nasal/towing.nas</file>
      <file>Aircraft/ASK21-MI/Nasal/messages.nas</file>
    </glider>
  </nasal>
  
</PropertyList>
